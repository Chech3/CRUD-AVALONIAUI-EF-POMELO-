<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PersonaApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="600"
             x:Class="PersonaApp.Views.PersonaFormControl"
             x:DataType="vm:PersonaViewModel">
    
    <Border Classes="card" Margin="10">
        <StackPanel Spacing="15">
            <TextBlock Text="Datos de la Persona" Classes="h2" Margin="0,0,0,10"/>
            
            <StackPanel Spacing="5">
                <TextBlock Text="Nombre" Classes="label"/>
                <TextBox Text="{Binding Nombre}" Watermark="Ingrese el nombre completo"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Fecha de Nacimiento" Classes="label"/>
                <DatePicker SelectedDate="{Binding FechaNacimiento}" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Género" Classes="label"/>
                <ComboBox ItemsSource="{Binding Generos}" 
                          SelectedItem="{Binding Genero}" 
                          HorizontalAlignment="Stretch"
                          PlaceholderText="Seleccione un género"/>
            </StackPanel>

            <CheckBox IsChecked="{Binding AceptaTerminos}" 
                      Content="Acepta Términos y Condiciones"
                      Margin="0,10,0,0"/>

            <UniformGrid Columns="2" Margin="0,20,0,0">
                <Button Content="Agregar" 
                        Command="{Binding AgregarCommand}" 
                        Classes="primary"
                        Margin="5"/>
                <Button Content="Actualizar" 
                        Command="{Binding ActualizarCommand}" 
                        Classes="secondary"
                        Margin="5"/>
                <Button Content="Eliminar" 
                        Command="{Binding EliminarCommand}" 
                        Classes="danger"
                        Margin="5"/>
                <Button Content="Limpiar" 
                        Command="{Binding LimpiarCommand}" 
                        Margin="5"/>
            </UniformGrid>
        </StackPanel>
    </Border>
</UserControl>
